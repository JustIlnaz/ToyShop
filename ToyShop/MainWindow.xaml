<Window x:Class="ToyShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToyShop" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Background="#FFB58C82">
            <Image Source="Images/logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
            <TextBlock Text="Joy Toy" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Content Frame -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>