<Application x:Class="ToyShop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ToyShop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <!--Кнопки-->
        <Style TargetType="Button" >
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#f3f0da"/>
            <Setter Property="Background" Value="#FFB58C82"/>

            <Style.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>

        
        <!--Текстбоксы-->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="100"/>
        </Style>
        
        <!--Текстблоки-->

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#FFB58C82"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="1">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#f3f0da"/>
        </Style>

        <!--Пароль-->
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        
       

    </Application.Resources>
</Application>
