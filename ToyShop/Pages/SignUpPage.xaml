<Page x:Class="ToyShop.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToyShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUpPage">

    <Grid Background="#f3f0da">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- First Name -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="First name:" VerticalAlignment="Center" Width="120"/>
                <TextBox x:Name="FirstNameTB" Width="200" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Last Name -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Last name:" VerticalAlignment="Center" Width="120"/>
                <TextBox x:Name="LastNameTB" Width="200" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Login -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Login:" VerticalAlignment="Center" Width="120"/>
                <TextBox x:Name="loginTb" Width="200" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Password -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Password:" VerticalAlignment="Center" Width="120"/>
                <PasswordBox x:Name="passwordPb" Width="200" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Repeat Password -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Repeat the password:" VerticalAlignment="Center" Width="147"/>
                <PasswordBox x:Name="RepeatPasswordPb" Width="200" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>