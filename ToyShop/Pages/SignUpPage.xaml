<Page x:Class="ToyShop.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SignUpPage">
    <Grid Background="#f3f0da">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="First name:" Width="120"/>
                <TextBox x:Name="FirstNameTB" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Last name:" Width="120"/>
                <TextBox x:Name="LastNameTB" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Login:" Width="120"/>
                <TextBox x:Name="loginTb" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Password:" Width="120"/>
                <PasswordBox x:Name="passwordPb" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Repeat password:" Width="120"/>
                <PasswordBox x:Name="RepeatPasswordPb" Width="200"/>
            </StackPanel>
            <Button Content="Регистрация" Click="SignUpBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>