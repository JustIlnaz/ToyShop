<Page x:Class="ToyShop.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AuthorizationPage">
    <Grid Background="#f3f0da">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Login:" Width="100"/>
                <TextBox x:Name="loginTb" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Password:" Width="100"/>
                <PasswordBox x:Name="passwordPb" Width="200"/>
            </StackPanel>
            <Button Content="Вход" Click="SignInBtn_Click"/>
            <Button Content="Зарегистрироваться" Click="SignUpBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>