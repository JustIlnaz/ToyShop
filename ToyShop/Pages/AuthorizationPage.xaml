<Page x:Class="ToyShop.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToyShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid Background="#f3f0da">
           <!--Авторизация-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!--Логин-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <TextBlock Text="Login:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox x:Name="loginTb" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            <!--Пароль-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <TextBlock Text="Password:" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <PasswordBox x:Name="passwordPb" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!--Кнопки авторизации-->
            <StackPanel>
       
                <!--Кнопки войти-->
                <Button Content="Вход" Name="SignInBtn" />
                
                <!--Кнопка зарегестрироваться-->
                <Button Content="Зарегестрироваться" Name="SignUpBtn"/>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
